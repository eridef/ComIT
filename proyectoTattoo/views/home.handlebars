<!-- TEMPLATE HOME -->

<div id="home">
    {{> artists this}}

    <!-- artículo estilos destacados -->
    <article class="style">
        <!-- título -->
        <div class="titulo">
            <h4>Artistas elegidos de esta semana</h4>
            <p>Lorem ipsum dolor amet nullam consequat etiam feugiat</p>
        </div>
        <!-- fin título -->

        <!-- fecha -->
        <div class="date">
            <p>Del 13 al 19 • <strong>Agosto</strong></p>
            <a href="#" target="_blank">Todos los artistas</a>
        </div>
        <!-- fin fecha -->

        <!-- estilos carrousel -->
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
                          
            <!-- Wrapper for slides -->
            <div class="carousel-inner" style="right:30px;">
                <div class="item active" >
                    <img src="img/puntillismo.jpg" alt="puntillismo">
                        <div class="carousel-caption">
                            <a href="#"><h3>Puntillismo</h3></a>
                        </div>
                </div>
                          
                <div class="item">
                    <img src="img/polka.jpg" alt="polka">
                        <div class="carousel-caption">
                            <a href="#"><h3>Polka</h3></a>
                        </div>
                </div>
                          
                <div class="item">
                    <img src="img/japanese.jpg" alt="japonés">
                        <div class="carousel-caption">
                            <a href="#"><h3>Japonés</h3></a>
                        </div>
                </div>
            </div>
                          
            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <!-- fin estilos carrousel -->
    </article>
    <!-- fin artículo estilos destacados -->

    <!-- artículo eventos destacados -->
    <article class="events">
        <!-- título -->
        <div class="titulo">
            <h4>Artistas elegidos de esta semana</h4>
            <p>Lorem ipsum dolor amet nullam consequat etiam feugiat</p>
        </div>
        <!-- fin título -->

        <!-- fecha -->
        <div class="date">
            <p>Del 13 al 19 • <strong>Agosto</strong></p>
            <a href="#" target="_blank">Todos los artistas</a>
        </div>
        <!-- fin fecha -->

        <!-- transparencia event-->
        {{> event this}}
        <!-- eventos las fotos tienen que ser 250x350-->
        <div id="event_1" class="event">
            <h4>Título evento</h4>
            <img src="img/event0.jpg" alt="event" title="event">
        </div>
        <div id="event_2" class="event1">
            <h4>Título evento</h4>
            <img src="img/event1.jpg" alt="event" title="event">
        </div>
        <div id="event_3" class="event2">                            
            <h4>Título evento</h4>
            <img src="img/event.jpg" alt="event" title="event">
        </div>
        <!-- fin eventos -->
    </article>
    <!-- fin artículo eventos destacados -->
</div>