<!-- TEMPLATE HOME -->

<div id="home">
    {{> artists this}}

    <!-- artículo estilos destacados -->
    <article class="style">
        <!-- título -->
        <div class="titulo">
            <h4>Estilos elegidos de esta semana</h4>
            <p>Lorem ipsum dolor amet nullam consequat etiam feugiat</p>
        </div>
        <!-- fin título -->

        <!-- fecha -->
        <div class="date">
            <p>Del 9 al 15 • <strong>Octubre</strong></p>
            <a href="/estilos">Todos los estilos</a>
        </div>
        <!-- fin fecha -->

        <!-- estilos carrousel -->
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
                          
            <!-- Wrapper for slides -->
            <div class="carousel-inner" style="width: 950px;right:25px;">
                <div class="item active" >
                    <img src="img/hiper.jpg" alt="puntillismo">
                        <div class="carousel-caption">
                            <a href="/estilos#home"><h3>Hiperrealismo</h3></a>
                        </div>
                </div>
                          
                <div class="item">
                    <img src="img/polka.jpg" alt="polka">
                        <div class="carousel-caption">
                            <a href="/estilos#home"><h3>Trash Polka</h3></a>
                        </div>
                </div>
                          
                <div class="item">
                    <img src="img/tradi.jpg" alt="tradicional">
                        <div class="carousel-caption">
                            <a href="/estilos#home"><h3>Tradicional</h3></a>
                        </div>
                </div>
            </div>
                          
            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <!-- fin estilos carrousel -->
    </article>
    <!-- fin artículo estilos destacados -->

    <!-- artículo eventos destacados -->
    <article class="events">
        <!-- título -->
        <div class="titulo">
            <h4>Próximos eventos</h4>
            <p>Los eventos de Buenos Aires y más</p>
        </div>
        <!-- fin título -->

        <!-- fecha -->
        <div class="date">
            <p>Octubre • <strong>Noviembre</strong></p>
            <a href="#">Todos los eventos</a>
        </div>
        <!-- fin fecha -->

        <!-- transparencia event-->
        {{> event this}}
        <!-- eventos las fotos tienen que ser 250x350-->
        <div id="event_1" class="event">
            <h4>Festiroble Aniversario!</h4>
            <img src="img/eventos/00.jpg" alt="event" title="event">
        </div>
        <div id="event_2" class="event1">
            <h4>ACAB - FLASH DAY</h4>
            <img src="img/eventos/01.jpg" alt="event" title="event">
        </div>
        <div id="event_3" class="event2">                            
            <h4>Tattoo y Circo</h4>
            <img src="img/eventos/02.jpg" alt="event" title="event">
        </div>
        <!-- fin eventos -->
    </article>
    <!-- fin artículo eventos destacados -->
</div>