$('.menu').on('click', function(event){
	e.preventDefault();
	link = $(this).attr('href'); // o si se usa data-link
	link = $(this).data('link');
	$('html, body').animate({
		scrollTop:$(link).offset().top();
	}, 500);





	/*vid = $(this).data('link');
	id = '#' + vid;
	$(id).slideDown("fast", function(){

		$(id).scrollTop();*/
	});

});


