//para que levante la informacion del select, tambien voy a necesitar la info del value, los option en html no van a estar, lo escribo en js

var options = ['uno', 'uno', 'uno'];

$(document).ready(function(){

	var select = $('#seleccion'); -----> objeto html

	for(i=0; i<options.length; i++){

		value = i + 1;
		var option = '<option value="'+value+'">'+options[i]+'</option>';
		select.append(option);
	}

});

